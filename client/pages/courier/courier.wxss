.top{
  width:100%;
  display: flex;
  left: 0;
  top:0;
  text-align: center;
  font-size: 40rpx;
  background: #1e82d2;
  color: #fff;
  height: 132rpx;
  font-weight:600;
}
.top view {
  width: 100%;
  height: 100%;
  line-height: 132rpx;
}
.content {
  width: 100%;
  /* background:#0d1017; */
}
.function{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.item {
  width: 50%;
  box-sizing: border-box;
  background: #364250;
  color: #fff;
  height: 300rpx;
  border:1px solid red;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}


.item .pic{
  margin:0 40rpx;
  border-radius: 50%;
  border: 1px solid #fff;
  width: 140rpx;
  height: 140rpx;
  background: #6600cc;
}


.item .pic image{
  width: 80%;
  height: 80%;
  margin:10%;
}
.item .scan image{
  width: 70%;
  margin:10% 15%;
}
.text{
  margin-top: 20rpx;
  font-size: 48rpx;
}