/* 快递业务 */
.business {
 width: 98%;
 
 display: flex;
 flex-direction: row;
 justify-content:center;
 height: 690rpx;
 margin:10rpx 0;
}

.business .pitem {
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.sendexpress {
  width: 100%;
  height: 50%;
  background: #97a8b2;
  margin-bottom: 2%;
}
.userInfo{
  background:#97a8b2; 
}
.sendexpress navigator{
  width: 100%;
  height: 100%;
}
.sendtext{
  font-size: 40rpx;
  padding-left: 20rpx;
  color: #fff;
  height: 60rpx;
  line-height: 60rpx;
}
.sendpic {
  width: 180rpx;
  height: 180rpx;
  background: #364250;
  border-radius: 50%;
  margin: 30rpx auto;
  border:3rpx solid #fff;
}
.sendpic image {
  width: 70%;
  height: 70%;
  margin: 15% ;
}
.checkexpress{
  width: 100%;
  height: 50%;
  background: #364250;
  display: flex;
  flex-direction: column;
  
}
.checkexpress .item{
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: row;
} 
.checkexpress .item .pic{
  margin:0 40rpx;
  border-radius: 50%;
  border: 1px solid #fff;
  width: 100rpx;
  height: 100rpx;
  background: #6600cc;
}
.checkexpress .bottom .pic{
  background:#cc00cc;
}
.checkexpress .top {
  padding: 8% 0;
}
.checkexpress .pic image{
  width: 70%;
  height: 80%;
  margin:10% 15%;
}
.checkexpress .bottom image{
  width: 80%;
  height: 80%;
  margin:10%;
}

.checkexpress .item .text{
  color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx; 
}
.business .warpleft {
  margin-right: 1%;
}

.expressoption{
  height: 100%;
  background: #364250;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.topitem {
  width: 100%;
  height: 25%;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: center;
}
.topitem .pic{
  border-radius: 50%;
  border: 1px solid #fff;
  width: 100rpx;
  height: 100rpx;
  box-sizing: border-box;
  margin: auto 0;
  margin-right: 40rpx;
}
.topitem .pic image{
  width: 80%;
  height: 80%;
  margin: 10%;

}
.topitem .text{
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  font-size: 36rpx;
  margin: auto 0;
}


/* 底部导航 */
.footer{
 width: 98%;
 display: flex;
 height: 140rpx;
 margin: 0 auto;
 position: fixed;
 bottom: 0rpx;
 z-index: 3;
 flex-direction: row;
}
.footer navigator {
  width: 50%;
  flex: 1;
}
.footeritem {
  flex: 1;
  width: 100%;
  height: 100%;
  background: #374351;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footeritem .text{
  font-size: 40rpx;
  color: #fff;
}
.footeritem .text1{
  font-size: 24rpx;
  color: #fff;
  font-weight: 400;
  font-family: "楷体"
}
.footeritem .pic{
  border-radius: 50%;
  border:6rpx solid #fff;
  margin-right:28rpx;
  height:80rpx;
  width: 80rpx;
}
.footeritem .pic image {
  width: 80rpx;
  height: 80rpx; 
}
.footeritem .fright{
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
  align-items: flex-start;
}

