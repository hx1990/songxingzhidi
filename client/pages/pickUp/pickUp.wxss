.pickList{
  width: 100%;
}
.total{
  display: flex;
  height: 80rpx;
  font-size: 30rpx;
  align-items: center;
  border-bottom: 2rpx solid #ccc;
  margin-left: 15rpx;
}
.total .textNumber{
  flex: 2.5;
  margin-right: 20rpx;
  
}
.total .textPrice{
  flex: 1.5;
   margin-right: 20rpx;
}
.total button{
  flex: 1;
  font-size: 30rpx;
  margin-top:8rpx;
}
.listHead{
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #ccc;
  display: flex;
  font-size: 26rpx;
  align-items: center;
  margin-left: 15rpx;
  flex-direction: row;
}
.listHead text {
  flex: 1;
  text-align: center
}