.content{
  display: flex;
  background: #ccc;
}
form {width:100%}
.section{
  height: 110rpx;
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 0rpx;
  background: #fff;
  border-radius: 5rpx;
  display: flex;
  line-height: 110rpx;
}
.section__title {
  padding: 0rpx 20rpx;
}

.section input{
  height: 110rpx;
  line-height: 110rpx;
}

.picker{
  padding: 0rpx 10rpx;
}
.select{
  display: flex;
  flex-direction: row;
  background: #fff;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 10rpx;
}

.select .item {
  flex: 1;
  height: 110rpx;
  line-height: 110rpx;
}
.select .section__title {
  flex: 1.5;
}
.btn-area{
  display: flex;
  justify-content: space-around;
  background: #fff;
  padding-top: 30rpx;
}
.getphone{
  font-size: 19rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: green;
  color: #fff;
  margin-top:33rpx;
  padding-left: 9rpx;
  padding-right: 9rpx;
}
.idcard{
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  flex-direction: column;
}
.idcard button{
  
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.idcard view{
  height: 600rpx;
  width: 80%;
  border: 2rpx dashed #ccc;
  text-align: center;
  font-size: 30rpx;
}
.idcard view image {
  width: 100%;
  height: 600rpx;
}