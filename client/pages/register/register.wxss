.content{
  display: flex;
  background: #ccc;
  width: 100%;
  overflow: hidden;
}
form {width:100%}
.section{
  height: 110rpx;
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 0rpx;
  background: #fff;
  border-radius: 5rpx;
  display: flex;
  line-height: 110rpx;
  font-size: 30rpx;
}
.section__title {
  padding: 0rpx 20rpx;
}

.section input{
  height: 110rpx;
  line-height: 110rpx;
}

.picker{
  padding: 0rpx 10rpx;
}
.select{
  display: flex;
  flex-direction: row;
  background: #fff;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 10rpx;
}

.select .item {
  flex: 1;
  height: 110rpx;
  line-height: 110rpx;
}
.select .section__title {
  flex: 1.5;
}
.btn-area{
  display: flex;
  justify-content: space-around;
  background: #fff;
  padding-top: 30rpx;
}
.getphone{
  font-size: 19rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: green;
  color: #fff;
  margin-top:33rpx;
  padding-left: 9rpx;
  padding-right: 9rpx;
}
.upload{
  width: 100%;
  background: #fff;
  font-size: 30rpx;
}
.upload-title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  text-align: center;
}
.upload-content{
  display: flex;
  width: 100%;
  flex-direction: column;
}
.upload-content .item{
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
}
.upload-content .item image{
  width: 30%;
  height: 150rpx;
}
.upload-content .item .image{
  width: 80%;
  height: 350rpx;
}
.upload-content .item view{
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
button{
  background: #dc3516;
  color: #fff;
  margin-bottom: 10rpx;
}
.padding{
  padding:0 10rpx;
}
.xinhao{
  font-size:50rpx;
padding-right:8rpx;
color:red;
}
.paddingleft{
  padding-left: 22rpx;
}