/* pages/searchlist/searchlist.wxss */
.content {
  width: 100%;
  height: 100%;
  background: #ccc
}
.top {
  width: 100%;
  height: 140rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  
}
.top view{
  flex: 1;
  text-align: center;
  height: 140rpx;
  line-height: 140rpx;
  border-bottom:2px solid #ccc;
}
.top .click {
  border-bottom:2px solid #1e82d2;
  color: #1e82d2
}
.show {
  width: 100%;
}
.radio-group{
  width: 100%;
}
.radio {
  width: 100%;
  display: flex;
  justify-content: center;
  border-bottom: 2rpx solid #fff;
  line-height: 60rpx;
}